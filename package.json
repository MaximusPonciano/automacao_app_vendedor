{
  "name": "app-vendedor",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "description": "Mobile automation project for App Vendedor",
  "scripts": {
    "test:mobile": "npx wdio run wdio.conf.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test:ci": "npm run lint && npm run prettier:check",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "webdriverio": "^9.20.0"
  },
  "devDependencies": {
    "@wdio/cli": "^9.20.0",
    "@wdio/cucumber-framework": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "appium": "^3.1.2",
    "appium-uiautomator2-driver": "^6.7.8",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --cache --cache-location .cache/eslint/"
    ],
    "*.{js,mjs,cjs,json,md,yml,yaml}": [
      "prettier --check"
    ]
  }
}
